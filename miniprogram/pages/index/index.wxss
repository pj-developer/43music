/**index.wxss**/

page {
  background: #65b2e9;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

page, .container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.music-header {
  width: 100%;
  height: 10%;
  border-bottom:1px solid #ffffff33;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
}

.music-msg-container {
  padding-left: 25%;
  padding-right: 25%;
}

.music-name-container {
  overflow: hidden;
}

.music-name {
  white-space:nowrap;
}

.music-singer {
  display: block;
  font-size: 24rpx;
}

.lrc-container {
  width: 100%;
  height: 100%;
  display:flex;
  position:relative;
}

.lrc-scroll-container {
  /* height: 15%; */
  color: #fff;
  text-align: center;
  /* background: rgba(0, 0, 0, 0.1); */
  position:absolute;
  z-index: 97;
  bottom:0;
}

.lrc-scroll-container text {
  font-size: 24rpx;
  opacity: 0.5;
}

.seize {
  height: 100%;
}

.control-container {
  width: 100%;
  text-align:center;
  padding-bottom:72rpx;
}

.btn-container {
  height: 72rpx;
}

.control-btn {
  height: 72rpx;
  border: none!important;
  display: inline-block;
}

.control-btn image {
  width: 72rpx;
}

.order-btn {
  float: left;
}

.msc-list-btn {
  float: right;
}

.modal {
  height: 100%;
  width:100%;
  position:fixed;
  z-index:98;
  opacity:0.3;
  background:#000;
}

.msc-list {
  width: 100%;
  height: 70%;
  position:absolute;
  bottom:0;
  z-index:99;
  background: #dee1e6;
  border-top-left-radius:7px;
  border-top-right-radius:7px;
}

.msc-list-header {
  height: 10%;
  border-bottom:1px solid #cccccc;
  display:flex;
  align-items:center;
  padding-left: 20rpx;
}

.msc-list-content {
  font-size:26rpx;
  height: 80%;
}

.msc-list-content text {
  display: block;
  padding: 20rpx;
}

.msc-list-foot {
    border-top:1px solid #cccccc;
    text-align:center;
    padding-top: 20rpx;
}

.progress-bar {
  padding:34rpx;
}

.progress-container {
  height: 100rpx;
}

.time-container {
  position:absolute;
  height:100rpx;
  display:flex;
  align-items:center;
  width:100%
}

.time-container text {
  font-size: 20rpx;
  position: absolute;
  color: #fff;
}

.start-time {
  left: 0;
}

.end-time {
  right: 0;
}

.cd-container {
  width:100%;
  height:100%;
  position:absolute;
  display:flex;
  align-items:center;
  justify-content:center;
}

